{
  "name": "simple-file-tagger",
  "version": "1.0.0",
  "author": "quantumwss@hotmail.com",
  "description": "A simple file tagger",
  "homepage": "./",
  "main": "./electron/main.js",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "node-disk-info": "^1.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^4.2.0",
    "react-infinite-scroller": "^1.2.4",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^9.1.1",
    "electron-builder": "^22.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "wait-on": "^5.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "cross-env BROWSER=none concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "extends": null,
    "win": {
      "icon": "build/logo512.png",
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "SimpleFileTagger.exe"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ]
  }
}
